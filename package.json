{
  "name": "cwrc-writer-base",
  "version": "3.0.4",
  "description": "intuitive document editing with xml and rdf",
  "main": "src/js/writer.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwrc/CWRC-WriterBase.git"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "annotation"
  ],
  "author": "Andrew MacDonald",
  "contributors": [
    "James Chartrand"
  ],
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-WriterBase/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-WriterBase#readme",
  "browser": {
    "objtree": "./src/lib/objtree/ObjTree.js",
    "jquery-watermark": "./src/lib/jquery/jquery.watermark.min.js",
    "jquery-popup": "./src/lib/jquery/jquery.popup.js",
    "layout": "./src/lib/jquery/jquery.layout_and_plugins.js",
    "dialogForm": "./src/js/dialogs/dialogForm/dialogForm.js",
    "annotationsManager": "./src/js/entities/annotationsManager.js",
    "entity": "./src/js/entities/entity.js"
  },
  "dependencies": {
    "css-parse": "^2.0.0",
    "css-stringify": "^2.0.0",
    "fscreen": "1.0.2",
    "jquery": "^3.4.1",
    "jquery-contextmenu": "^2.8.0",
    "jquery-ui": "^1.12.1",
    "js-cookie": "^2.1.4",
    "jstree": "3.3.3",
    "moment": "^2.22.2",
    "openseadragon": "2.3.1",
    "prism-themes": "^1.0.1",
    "prismjs": "1.6.0",
    "rdflib": "1.0.2",
    "tinymce": "4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@jest-runner/electron": "^2.0.2",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@testing-library/jest-dom": "^4.1.0",
    "babel-jest": "^24.9.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "codecov": "^3.3.0",
    "commitizen": "^3.1.1",
    "copyfiles": "^1.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^6.0.4",
    "husky": "^2.1.0",
    "jest": "^24.9.0",
    "less": "^3.8.1",
    "mkdirp": "^0.5.1",
    "path-exists-cli": "^1.0.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.13.19",
    "travis-deploy-once": "^5.0.7",
    "watchify": "^3.11.1"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "cm": "git-cz",
    "test": "jest",
    "report-coverage": "cat ./coverage/coverage-final.json | codecov",
    "clean": "rimraf build",
    "build": "npm run build-css && npm run copy-files-to-build",
    "build-css": "mkdirp build/css && npm run build-scoped-css && npm run build-editor-css",
    "build-scoped-css": "lessc src/css/build.less build/css/cwrc-writer.css --global-var=\"parentId=#cwrcWriterContainer\"",
    "build-editor-css": "lessc src/css/editor.less build/css/editor.css",
    "copy-files-to-build": "npm run copy-tinymce && npm run copy-jqueryui-images && npm run copy-bootstrap-fonts && npm run copy-jstree-images",
    "copy-tinymce": "copyfiles -u 3 \"src/css/tinymce/**/*\" build/css/tinymce",
    "copy-jqueryui-images": "copyfiles -u 3 \"src/css/jquery-ui/jquery-ui-images/*\" build/css/",
    "copy-bootstrap-fonts": "path-exists node_modules && copyfiles -f \"node_modules/bootstrap/fonts/*\" build/fonts/ || copyfiles -f \"../bootstrap/fonts/*\" build/fonts/",
    "copy-jstree-images": "path-exists node_modules && copyfiles -f \"node_modules/jstree/dist/themes/default/*.png\" build/css/ || copyfiles -f \"../jstree/dist/themes/default/*.png\" build/css/"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "jest": {
    "browser": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/js/**/*",
      "!**/js/tinymce_plugins/**",
      "!**/schema/cwrcEntry/**",
      "!**/schema/orlando/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFiles": [
      "./test/test-env.js"
    ],
    "runner": "@jest-runner/electron",
    "testEnvironment": "@jest-runner/electron/environment",
    "testMatch": [
      "**/test/test.js"
    ],
    "verbose": true
  }
}
