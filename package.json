{
  "name": "cwrc-writer-base",
  "version": "0.0.0-development",
  "description": "intuitive document editing with xml and rdf",
  "main": "src/js/writer.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwrc/CWRC-WriterBase.git"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "annotation"
  ],
  "author": "Andrew MacDonald",
  "contributors": [
    "James Chartrand"
  ],
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-WriterBase/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-WriterBase#readme",
  "browser": {
    "objtree": "./lib/objtree/ObjTree.js",
    "jquery-watermark": "./lib/jquery/jquery.watermark.min.js",
    "jquery-popup": "./lib/jquery/jquery.popup.js",
    "layout": "./lib/jquery/jquery.layout_and_plugins.js",
    "dialogForm": "./src/js/dialogs/dialogForm/dialogForm.js",
    "entity": "./src/js/entity.js"
  },
  "dependencies": {
    "css-parse": "^2.0.0",
    "css-stringify": "^2.0.0",
    "cwrc-nerve-wrapper": "0.0.2",
    "fscreen": "1.0.2",
    "jquery": "3.2.1",
    "jquery-contextmenu": "^2.8.0",
    "jquery-ui": "1.12",
    "jstree": "3.3.3",
    "moment": "^2.22.2",
    "openseadragon": "2.3.1",
    "prism-themes": "^1.0.1",
    "prismjs": "1.6.0",
    "tinymce": "4.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^8.0.0",
    "browser-run": "^5.0.0",
    "browserify": "^14.5.0",
    "browserify-istanbul": "^2.0.0",
    "codecov": "^3.1.0",
    "commitizen": "^2.10.1",
    "concat-stream": "^1.6.2",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.2.0",
    "cwrc-git-dialogs": "^1.8.0",
    "cwrc-public-entity-dialogs": "^1.7.4",
    "cz-conventional-changelog": "^2.1.0",
    "dbpedia-entity-lookup": "^0.0.0",
    "deamdify": "^0.3.0",
    "faucet": "^0.0.1",
    "getty-entity-lookup": "^1.4.2",
    "husky": "^0.13.4",
    "istanbul": "^0.4.5",
    "less": "^3.8.1",
    "log4javascript": "^1.4.15",
    "mkdirp": "^0.5.1",
    "path-exists-cli": "^1.0.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.9.12",
    "sinon": "^7.3.2",
    "tape": "^4.9.1",
    "tape-promise": "^2.0.1",
    "travis-deploy-once": "^5.0.7",
    "viaf-entity-lookup": "^1.2.2",
    "watch": "^1.0.2",
    "watchify": "^3.11.0",
    "wikidata-entity-lookup": "^1.2.2"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "cm": "git-cz",
    "precommit": "npm run test && npm run check-coverage",
    "test": "npm run test:electron && npm run generate-coverage",
    "test:watch": "watchify test/test.js --debug -o test/build/test.js -g deamdify -t [ browserify-istanbul --ignore \"**/schema/cwrcEntry/**\" --ignore \"**/schema/orlando/**\" ]",
    "test:electron": "mkdirp coverage && browserify -g deamdify -t [ browserify-istanbul --ignore \"**/schema/cwrcEntry/**\" --ignore \"**/schema/orlando/**\" ] test/test.js | browser-run --static . | node test/extract-coverage.js | faucet ",
    "generate-coverage": "istanbul report --root coverage lcov",
    "check-coverage": "istanbul check-coverage --statements 5 --branches 1 --functions 1 --lines 5",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "nerve-build": "browserify src/js/layout/modules/nerve.js -o build/nerve.js -g babelify -g deamdify --debug --verbose",
    "clean": "rimraf build",
    "build": "npm run build-css && npm run copy-files-to-build",
    "build-css": "mkdirp build/css && npm run build-scoped-css && npm run build-editor-css",
    "build-scoped-css": "lessc src/css/build.less build/css/cwrc-writer.css --global-var=\"parentId=#cwrcWriterContainer\"",
    "build-editor-css": "lessc src/css/editor.less build/css/editor.css",
    "copy-files-to-build": "npm run copy-tinymce && npm run copy-jqueryui-images && npm run copy-bootstrap-fonts && npm run copy-jstree-images",
    "copy-tinymce": "copyfiles -u 3 \"src/css/tinymce/**/*\" build/css/tinymce",
    "copy-jqueryui-images": "copyfiles -u 3 \"src/css/jquery-ui/jquery-ui-images/*\" build/css/",
    "copy-bootstrap-fonts": "path-exists node_modules && copyfiles -f \"node_modules/bootstrap/fonts/*\" build/fonts/ || copyfiles -f \"../bootstrap/fonts/*\" build/fonts/",
    "copy-jstree-images": "path-exists node_modules && copyfiles -f \"node_modules/jstree/dist/themes/default/*.png\" build/css/ || copyfiles -f \"../jstree/dist/themes/default/*.png\" build/css/"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "env": {
            "test": {
              "plugins": [
                "istanbul"
              ]
            }
          }
        }
      ]
    ]
  }
}
